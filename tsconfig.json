{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": true,
    "composite": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/core/*": ["packages/core/src/*"],
      "@/cli/*": ["packages/cli/src/*"]
    }
  },
  "include": ["index.ts", "tests/**/*.ts"],
  "exclude": ["node_modules", "dist"],
  "references": [
    {
      "path": "./packages/core"
    },
    {
      "path": "./packages/cli"
    }
  ]
}
